{
  "name": "value-create-career-support",
  "version": "1.0.0",
  "description": "Value Create キャリア支援サービス - AIエンジニアと企業を繋ぐプラットフォーム",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=${PORT:-8001} --host=localhost",
    "start": "python3 -m http.server ${PORT:-8001}",
    "serve": "npx http-server -p ${PORT:-8001}",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "check": "python check_website.py index.html",
    "check:all": "for file in index.html jobseeker/index.html corporate/index.html; do python check_website.py $file; done"
  },
  "keywords": [
    "AI",
    "recruitment",
    "talent",
    "hiring"
  ],
  "author": "株式会社バリュークリエイト",
  "license": "Proprietary",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "live-server": "^1.2.2"
  }
}